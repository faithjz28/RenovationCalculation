<Window x:Class="RenovationCalculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RenovationCalculation"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Calculation of renovating works" Height="500" Width="800" MinHeight="250" MinWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.66*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.26*"/>
            </Grid.RowDefinitions>
            <Label Content="Total sum"  Grid.Row="1"  Height="50" Width="154" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
            <Label Content="Total sum = " Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="159"/>            
        </Grid>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Row="0" DataContext="{Binding SelectedTypeOfWork}">
                <TextBlock Text="Selected work:"  />
                <TextBox Text="{Binding TypeOfWorkName, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Quantity" />
                <TextBox Text="{Binding QuantityHoursOfWork, UpdateSourceTrigger=PropertyChanged}" />                
            </StackPanel>
            
            <ListBox x:Name="ListBoxOfWorks" Grid.Row="0" Grid.Column="1" SelectedItem="{Binding SelectedWork}" ItemsSource="{Binding TypeOfWorks}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="3">
                            <TextBlock FontSize="20"  TextAlignment="Right" Text="{Binding Path=TypeOfWorkName}" LineHeight="Auto"/>               
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <ListBox x:Name="ListBoxOfWorkers"  Visibility="Hidden" IsEnabled="False"  Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Workers}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="3">
                            <Label Content="Name of Worker:"/>
                            <TextBlock FontSize="20"  TextAlignment="Right" Text="{Binding Path=Name}" LineHeight="Auto"/>
                            <Label Content="Price per hour:"/>
                            <TextBlock FontSize="20"  TextAlignment="Right" Text="{Binding Path=PricePerHour}" LineHeight="Auto"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <Button Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Content="New work" FontSize="25"  Margin="50,50,20,20" Height="52" Width="153"/>
    </Grid>
</Window>
